  1 #!/usr/bin/env bash
  2 # The path to the file to be transferred.
  3 # The IP of the server to transfer the file to.
  4 # The username that scp connects with.
  5 # The path to the SSH private key that scp uses.
  6
  7 if [ $# -lt 4 ]
  8 then
  9   echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
 10 else
 11   scp -o StrictHostKeyChecking=no -i "$4" "$1" "$3@$2":~
 12 fi
